<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".mapper.BlogMapper">
    <resultMap type=".entity.Blog" id="BlogMap">
        <result property="id" column="id" jdbcType="INT"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="body" column="body" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="INT"/>
        <result property="collection" column="collection" jdbcType="INT"/>
        <result property="praise" column="praise" jdbcType="INT"/>
        <result property="videoName" column="video_name" jdbcType="VARCHAR"/>
        <result property="imager" column="imager" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!-- 通过ID查询单条数据 -->
    <select id="queryById" resultMap="BlogMap">
        select
            id,title,body,uid,collection,praise,video_name,imager
        from blog
        where id = #{id}
    </select>
    
    <!--分页查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BlogMap">
        select
            id,title,body,uid,collection,praise,video_name,imager
        from blog
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="body != null and body != ''">
                and body = #{body}
            </if>
            <if test="uid != null and uid != ''">
                and uid = #{uid}
            </if>
            <if test="collection != null and collection != ''">
                and collection = #{collection}
            </if>
            <if test="praise != null and praise != ''">
                and praise = #{praise}
            </if>
            <if test="videoName != null and videoName != ''">
                and video_name = #{videoName}
            </if>
            <if test="imager != null and imager != ''">
                and imager = #{imager}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>
    
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from blog
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="body != null and body != ''">
                and body = #{body}
            </if>
            <if test="uid != null and uid != ''">
                and uid = #{uid}
            </if>
            <if test="collection != null and collection != ''">
                and collection = #{collection}
            </if>
            <if test="praise != null and praise != ''">
                and praise = #{praise}
            </if>
            <if test="videoName != null and videoName != ''">
                and video_name = #{videoName}
            </if>
            <if test="imager != null and imager != ''">
                and imager = #{imager}
            </if>
        </where>
    </select>
    
    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into blog(id,title,body,uid,collection,praise,video_name,imager)
        values (#{id},#{title},#{body},#{uid},#{collection},#{praise},#{videoName},#{imager})
    </insert>
    
    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog(id,title,body,uid,collection,praise,video_name,imager)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.title},#{entity.body},#{entity.uid},#{entity.collection},#{entity.praise},#{entity.videoName},#{entity.imager})
        </foreach>
    </insert>
    
    <!-- 批量新增或按主键更新数据 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into blog(id,title,body,uid,collection,praise,video_name,imager)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.title},#{entity.body},#{entity.uid},#{entity.collection},#{entity.praise},#{entity.videoName},#{entity.imager})
        </foreach>
        on duplicate key update
        id=values(id),
		title=values(title),
		body=values(body),
		uid=values(uid),
		collection=values(collection),
		praise=values(praise),
		video_name=values(video_name),
		imager=values(imager)
    </insert>
    
    <!-- 更新数据 -->
    <update id="update">
        update blog
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="body != null and body != ''">
                body = #{body},
            </if>
            <if test="uid != null and uid != ''">
                uid = #{uid},
            </if>
            <if test="collection != null and collection != ''">
                collection = #{collection},
            </if>
            <if test="praise != null and praise != ''">
                praise = #{praise},
            </if>
            <if test="videoName != null and videoName != ''">
                video_name = #{videoName},
            </if>
            <if test="imager != null and imager != ''">
                imager = #{imager},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog where id = #{id}
    </delete>
</mapper>